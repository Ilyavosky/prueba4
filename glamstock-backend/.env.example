# ==========================================
# ENV Variables para Producción (Backend)
# ==========================================

# Puerto de escucha del backend (Railway lo provee automáticamente como PORT)
PORT=4000

# Entorno de Node
NODE_ENV=production

# URL de la base de datos (Neon / Railway PostgreSQL)
# Ejemplo: postgresql://glamstock_user:passwd@host.neon.tech/glamstock_db?sslmode=require
DATABASE_URL="TU_DB_URL_AQUI"

# Secreto para JWT (genera uno largo y seguro)
JWT_SECRET="un_string_super_seguro_y_largo_generado_aleatoriamente"

# URL del Frontend (Vercel) para permitir CORS
# Ejemplo: https://glamstock-frontend.vercel.app
FRONTEND_URL="http://localhost:3000"
